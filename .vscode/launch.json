{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Index Directory",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "--mode=dir",
                "--dir=examples"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "Index Single File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "--mode=file",
                "--file=examples/vulnerable_code.c"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "Search",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [
                "--mode=search",
                "--search=examples/vulnerable_code.c"
            ],
            "env": {},
            "showLog": true
        },
        {
            "name": "Debug Current Go File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "env": {},
            "showLog": true
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Debug Weaver - Custom Args",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": [],
            "env": {},
            "showLog": true,
            "console": "integratedTerminal"
        }
    ]
}